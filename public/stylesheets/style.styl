
main-color = #fa5b4d
background-color = #faf9f0
font-size:12px

ul
  border:0
  margin:0
  padding:0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 5px 5px
  color #fff
  font-size 10px
  text-align center
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.mainDiv
  width 800px
  margin 10px auto
  float:left

.mainDiv div 
  display: inline-block  

.deviceContainer
  width 400px
  margin 10px auto

.dzContainer
  width 400px
  margin 10px auto  

.scroll
    max-height: 400px
    overflow: auto
    border:1px solid #98bf21
    padding:3px 7px 2px 7px

.fixed-table-container {
      width: 100%;
      height: 400px;
      border: 1px solid black;
      margin: 10px auto;
      /* above is decorative or flexible */
      position: relative; /* could be absolute or relative */
      padding-top: 30px; /* height of header */
    }

.fixed-table-container-inner {
      overflow-x: hidden;
      overflow-y: auto;
      height: 100%;
    }
     
.header-background {
      background-color: #A7C942;
      height: 30px; /* height of header */
      position: absolute;
      top: 0;
      right: 0;
      left: 0;
    }
    
table {
      width: 100%;
      overflow-x: hidden;
      overflow-y: auto;
    }


.th-inner {
      position: absolute;
      color:white;
      top: 0;
      line-height: 30px; /* height of header */
      text-align: left;
     /* border-left: 1px solid black; */
      padding-left: 5px;
      margin-left: -5px;
    }

.first .th-inner {
        border-left: 1px solid black; 
        padding-left: 0px;
      }

